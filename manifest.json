{
  "manifest_version": 3,
  "name": "FB Auto: React + Comment",
  "version": "1.2.0",
  "description": "Auto scroll → read → react → comment with context-based templates",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "host_permissions": ["https://www.facebook.com/*"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/comment_templates_6000.json"],
      "matches": ["https://www.facebook.com/*"]
    }
  ]
}